---
// Get current locale from URL path or default to 'en'
const currentPathname = Astro.url.pathname;
const currentLocale = currentPathname.startsWith('/pt') ? 'pt' : 'en';

// Define content type
interface LocaleContent {
    navigation: {
        contactLink: string;
        [key: string]: string;
    };
    [key: string]: any;
}

const content: LocaleContent = await import(`../content/property/${currentLocale}.json`).then(module => module.default);
const contactTitle = content.navigation.contactLink; // Or add a specific title in JSON
---
<section id="contact" class="py-20 md:py-28 bg-brand-light-gray animate-on-scroll">
    <div class="container-custom text-center max-w-3xl mx-auto">
        <h2 class="section-title mx-auto">{contactTitle}</h2>
        <p class="text-xl text-brand-light-text mb-10 leading-relaxed">
            {currentLocale === 'pt' ? 'Tem interesse neste imóvel exclusivo ou gostaria de agendar uma visita? Adoraríamos ouvir de si. Utilize o botão abaixo ou contacte-nos diretamente.' : 'Interested in this exclusive property or wish to schedule a viewing? We would love to hear from you. Use the button below or reach out to us directly.'}
        </p>
        <a href="mailto:your.email@example.com?subject=Inquiry about Mirador Aveiro Flat"
           class="inline-block bg-gradient-to-r from-brand-secondary to-brand-accent text-white text-xl font-bold px-12 py-5 rounded-xl
                  hover:shadow-lifted transition-all duration-300 ease-custom-ease shadow-lg
                  transform hover:-translate-y-1.5 focus:outline-none focus:ring-4 focus:ring-brand-accent/50 active:scale-95">
            {currentLocale === 'pt' ? 'Enviar Pedido de Contacto' : 'Request Contact Now'}
        </a>
        <p class="mt-10 text-brand-text text-lg">
            {currentLocale === 'pt' ? 'Ou fale com o nosso consultor dedicado: ' : 'Or speak with our dedicated consultant: '}
            <span class="font-semibold text-brand-primary hover:text-brand-secondary transition-colors duration-300">{`+351 123 456 789`}</span>
        </p>
    </div>
</section>
